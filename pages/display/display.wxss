.container{
    min-height: 100%;
    height: unset;
    background-color: white;
    flex-direction: column;
}

text{
    display: block;
    word-break: break-all;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.title{
    margin-top: 30rpx;
    font-weight: 400;
    font-size: 50rpx;
}

.sender{
    margin-top: 5rpx;
    font-size: 30rpx;
    color: #888888;
}

.text-content{
    font-size: 35rpx;
    font-weight: 300;
    line-height: 50rpx;
    letter-spacing: 3rpx;
    word-break: break-all;
    text-align: justify;
    white-space: pre-wrap;
}


.content-container{
    width: 100%;
    margin-top: 20rpx;
    flex-direction: column;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding: 0rpx;
}

.q-title{
    font-weight: 400;
    word-break: break-all;
    text-align: justify;
    margin-top: 20rpx;
}

.q-option{
    display:block;
    word-break:break-all;
    padding-left:20rpx;
    padding-right:20rpx;
    margin-top: 10rpx;
    color:#444444;
}

.image-content{
    max-width: calc(100% - 40rpx);
    margin: 10rpx auto;
}