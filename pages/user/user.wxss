.container{
    background-color: white;
}
.page-content{
    flex-direction: column;
    position: absolute;
    bottom: 0rpx;
    background-color: white;
    width: 100%;
    height: 70%;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.header-container{
    flex-direction: row;
    margin-top: 30rpx;
    align-items: center;
}

.header-container image{
    width: 120rpx;
    height: 120rpx;
    margin-left: 30rpx;
    border: 5rpx solid rgba(171, 171, 171, 0.3);
    border-radius: 75rpx;
}

.user-info{
    display: unset;
    margin-left: 30rpx;
}

.nickname{
    display: block;
    font-size: 50rpx;
}

.tag-container{
    margin-top: 10rpx;
}

.tag{
    top: 10rpx;
    display: inline-flex;
    font-size: 16rpx;
    padding: 15rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
    background-color: #cccccc;
    border-radius: 20rpx;
    text-align: center;
    color: white;
    border: 1rpx solid #f2f2f2;
}

.function-items{
    flex-direction: column;
    margin-top: 30rpx;
    width: 100%;
}

.function-item{
    display: flex;
    flex-direction: row;
    height: 100rpx;
    align-items: center;
    width: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    justify-content: space-between;
    box-sizing: border-box;
}

.function-icon{
    width: 50rpx;
    height: 50rpx;
}

.function-item text{
    font-size: 36rpx;
    margin-left: 20rpx;
    color: #666666;
}

.arrow{
    width: 50rpx;
    height: 50rpx;
}

.copyright{
    width: 100%;
    font-size: 24rpx;
    color: #cccccc;
    text-align: center;
    position: absolute;
    bottom: 20rpx;
}

.function-item .button-hover{
    border-radius: 0rpx;
}

.function-item view{
    align-items: center;
}

.code-image{
    height: 60rpx;
    width: 150rpx;
}

.tip{
    text-indent: 0em;
    margin-top: 20rpx;
    word-break: break-all;
    font-size: 25rpx;
    line-height: 30rpx;
}