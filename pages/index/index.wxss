.container{
    background-color: white;
}
swiper{
    margin-top: 72rpx;
}

swiper,swiper-item{
    height: 320rpx;
}

.swiper-item image{
    width: calc(100% - 40rpx);
    margin: 0rpx 20rpx;
    height: 320rpx;
    border-radius: 20rpx;
    border: 1rpx solid #f2f2f2;
}

.dot-container{
    margin: 0rpx auto;
    position: absolute;
    top: 340rpx;
    margin:0rpx auto;
    width: 100%;
}

.dot-wrapper{
    margin: 0rpx auto;
    padding: 10rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    border-radius: 20rpx;
    background: rgba(0, 0, 0, 0.3);
    border: 1rpx solid rgba(0, 0, 0, 0.1)
}

.dot{
    width: 15rpx;
    height: 15rpx;
    background: white;
    margin: 0rpx 10rpx;
    border-radius: 15rpx;
    opacity: 0.8;
    border: 1rpx solid #eaeaea;
}

.dot-this{
    width: 30rpx;
    background: #c1272d;
    opacity: 1.0;
}

.function-row{
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.function-block{
    flex-direction: column;
    text-align: center;
}

.function-block image{
    width: 100rpx;
    height: 100rpx;
    margin: 0px auto;
}

.function-block text{
    font-size: 28rpx;
}

.today-lesson-container{
    flex-direction: column;
    margin: 20rpx;
    width: calc(100% - 50rpx);
    height: 630rpx;
    border: 5rpx solid #e6e6e6;
    border-radius: 15rpx;
    overflow: hidden;
}

.today-item{
    width: 100%;
    height: 90rpx;
    flex-direction: row;
    justify-content: space-around;
}

.today-header{
    font-weight: bold;
    font-size: 30rpx !important;
}

.today-column{
    text-align: center;
    width: 33.33%;
    padding-left: 3rpx;
    padding-right: 3rpx;
    line-height: 90rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 25rpx;
}