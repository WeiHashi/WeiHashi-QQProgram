.modal-header{
    width: 100%;
    height: 48rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.modal-title{
    font-size: 40rpx;
}

.modal-close{
    width: 48rpx;
    height: 48rpx;
}
